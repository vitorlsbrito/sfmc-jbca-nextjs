{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "icon.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Custom Activity (Workflow API v1.1)",
            "description": "A custom Journey Builder activity using workflow API v1.1 format."
        },
        "pt-BR": {
            "name": "Custom Activity (Workflow API v1.1)",
            "description": "Uma custom activity para Journey Builder usando o Workflow API 1.1"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                { "contactKey": "{{Contact.Key}}" }
            ],
            "outArguments": [],
            "timeout": 100000,
            "retryCount": 1,
            "retryDelay": 10000,
            "concurrentRequests": 5,
            "url": "https://sfmc-jbca-nextjs.vercel.app/api/execute"
        }
    },
    "configurationArguments": {
        "save": {
            "url": "https://sfmc-jbca-nextjs.vercel.app/api/save"
        },
        "publish": {
            "url": "https://sfmc-jbca-nextjs.vercel.app/api/publish"
        },
        "validate": {
            "url": "https://sfmc-jbca-nextjs.vercel.app/api/validate"
        },
        "stop": {
            "url": "https://sfmc-jbca-nextjs.vercel.app/api/stop"
        }
    },
    "wizardSteps": [
        {
            "label": "Step 1",
            "key": "step1"
        },
        {
            "label": "Step 2",
            "key": "step2"
        },
        {
            "label": "Step 3",
            "key": "step3"
        },
        {
            "label": "Step 4",
            "key": "step4",
            "active": false
        }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 200,
            "width": 300,
            "fullscreen": true
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "title": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"
                        },
                        "text": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"
                        },
                        "target": {
                            "dataType": "String",
                            "isNullable": true,
                            "direction": "out"
                        }
                    }
                ],
                "outArguments": []
            }
        }
    }
}